@model IEnumerable<WCF_Client.Controllers.WcfClientController.JobDetails>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>WCF Client</h2>
    @using (Html.BeginForm("ProcessForm", "WcfClient", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Enter Your Role Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="myRoleName" placeholder="Enter Role Name" name="myRoleName">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <button type="submit" name="GetOpeningJobs" value="GetOpeningJobs" class="btn btn-default">Get Opening Jobs</button> <button type="submit" name="GetOpeningJobsByRole" value="GetOpeningJobsByRole" class="btn btn-default">Get Opening Jobs ByRole</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <table class="table">
                    <tr>
                        <th>
                            Job Name
                        </th>
                        <th>
                            Skill
                        </th>
                        <th>
                            Role
                        </th>
                        <th>
                            Date
                        </th>
                    </tr>

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Skill)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                        }
                    }
                </table>

            </div>

        </div>
    }
</div>

