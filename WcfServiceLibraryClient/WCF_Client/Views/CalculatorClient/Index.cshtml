
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>WCF Client</h2>
<div class="container">
    @using (Html.BeginForm("Calculate", "CalculatorClient", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Enter Your Number 1:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Number1" placeholder="Enter Your Number 1" name="Number1">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Enter Your Number 2:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Number2" placeholder="Enter Your Number 2" name="Number2">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <button type="submit" name="Sum" value="Sum" class="btn btn-default">Sum</button> <button type="submit" name="Subtract" value="Subtract" class="btn btn-default">Subtract</button>
            </div>
        </div>
        <div class="form-group">
          Result Is:  @ViewBag.Message
        </div>
    }
</div>
